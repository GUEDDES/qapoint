<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tv_username_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21px"
        android:layout_y="118px"
        android:text="Username:" >
    </TextView>

    <TextView
        android:id="@+id/tv_password_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21px"
        android:layout_y="165px"
        android:text="Password:" >
    </TextView>
    
    <TextView
        android:id="@+id/tv_repassword_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21px"
        android:layout_y="212px"
        android:text="Re-enter password:" >
    </TextView>

    <TextView
        android:id="@+id/widget38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23px"
        android:layout_y="54px"
        android:text="Welcome to QAPoint!" >
    </TextView>

    <EditText
        android:id="@+id/ev_username_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="72dp"
        android:textSize="18sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ev_password_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="102dp"
        android:inputType="textPassword"
        android:textSize="18sp" />
    
   <EditText
        android:id="@+id/ev_repassword_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="132dp"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_signup_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="213dp"
        android:text="Sign Up!" />

    <TextView
        android:id="@+id/tv_error_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="364dp"/>

</AbsoluteLayout>